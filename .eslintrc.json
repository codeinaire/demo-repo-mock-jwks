{
    "extends": [
        "prettier",
        "prettier/@typescript-eslint"
    ],
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "all",
                "singleQuote": true
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "camelcase": 2
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    }
}